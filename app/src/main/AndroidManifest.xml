<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adintech.farmersguide">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FarmersGuide">
        <activity android:name=".views.activities.ModernFarmingMethodActivity"
            android:parentActivityName=".views.activities.DashboardActivity"/>
        <activity android:name=".views.activities.GovermentSchemeActivity"
            android:parentActivityName=".views.activities.DashboardActivity"/>
        <activity
            android:name=".views.activities.ExpertCallService"
            android:parentActivityName=".views.activities.DashboardActivity" />
        <activity
            android:name=".views.activities.ModernInstrumentsActivity"
            android:parentActivityName=".views.activities.DashboardActivity" />
        <activity
            android:name=".views.activities.YoutubePlayerActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.activities.YoutubeVideosActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.activities.CropDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FarmersGuide.NoActionBar" />
        <activity
            android:name=".views.activities.WeatherActivity"
            android:parentActivityName=".views.activities.DashboardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.activities.DashboardActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".views.activities.CropListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.activities.SelectLanguageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>