<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_crop_disease"
        android:layout_width="@dimen/dimen_200dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_8dp"
        app:cardCornerRadius="@dimen/dimen_8dp"
        app:cardElevation="@dimen/dimen_8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/crop_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_100dp"
                android:scaleType="fitXY"
                android:src="@drawable/no_image_icon" />

            <TextView
                android:id="@+id/crop_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:paddingHorizontal="@dimen/dimen_10dp"
                android:paddingVertical="@dimen/dimen_2dp"
                android:text="Root Weevil"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/crop_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="2"
                android:paddingHorizontal="@dimen/dimen_10dp"
                android:paddingBottom="@dimen/dimen_5dp"
                android:text="The presence of root weevil can be detected by the root and leave damage of yield."
                android:textSize="@dimen/dimen_12sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>