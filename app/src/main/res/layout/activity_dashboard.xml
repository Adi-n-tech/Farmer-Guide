<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".views.activities.DashboardActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_230dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_profile"
                android:layout_width="@dimen/dimen_80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/epimage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/good_morning"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xyz_name"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:text="Dashboard"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:text="Last Update 25 March 2020"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_18sp" />
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-50dp"
            app:cardBackgroundColor="#F3EFEF"
            app:cardCornerRadius="@dimen/dimen_30dp"
            app:cardElevation="@dimen/dimen_50dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dimen_5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/parent_my_account"
                            android:layout_width="170dp"
                            android:layout_height="150dp"
                            android:layout_margin="@dimen/dimen_10dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="@dimen/dimen_10dp">

                            <LinearLayout
                                android:id="@+id/cropsCard"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/my_account"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dimen_70dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/crops" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/dimen_10dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="@string/crop"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_farming_method"
                            android:layout_width="@dimen/dimen_170dp"
                            android:layout_height="@dimen/dimen_150dp"
                            android:layout_margin="@dimen/dimen_10dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="@dimen/dimen_10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/inventory"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dimen_70dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/farmingmethod" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="@string/modern_farming_method"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_videos"
                            android:layout_width="170dp"
                            android:layout_height="150dp"
                            android:layout_margin="@dimen/dimen_10dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="@dimen/dimen_10dp"
                            app:cardElevation="@dimen/dimen_8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/search_machine"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dimen_70dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/dimen_10dp"
                                    android:layout_weight="1"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/video" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/dimen_10dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="@string/useful_videos"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_gov_scheme"
                            android:layout_width="@dimen/dimen_170dp"
                            android:layout_height="@dimen/dimen_150dp"
                            android:layout_margin="@dimen/dimen_10dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="@dimen/dimen_10dp"
                            app:cardElevation="@dimen/dimen_8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/request"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dimen_70dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/dimen_10dp"
                                    android:layout_weight="1"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/schemes" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="@string/goverment_schenes"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_modern_instruments"
                            android:layout_width="170dp"
                            android:layout_height="150dp"
                            android:layout_margin="@dimen/dimen_10dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="@dimen/dimen_10dp"
                            app:cardElevation="@dimen/dimen_8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/analytics"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dimen_70dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/instruments" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/dimen_10dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="@string/morden_farminh_instruments"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_expert_advice"
                            android:layout_width="@dimen/dimen_170dp"
                            android:layout_height="@dimen/dimen_150dp"
                            android:layout_margin="@dimen/dimen_10dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="@dimen/dimen_10dp"
                            app:cardElevation="@dimen/dimen_8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/contact_us"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dimen_70dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/expertadvice" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="@string/expert"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    android:textStyle="bold" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>