<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="@dimen/dimen_280dp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/dimen_280dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dimen_10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/dimen_10dp">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_200dp"
                    android:scaleType="center"
                    android:src="@drawable/no_image_icon" />

                <ImageView
                    android:id="@+id/btn_cancel"
                    android:layout_width="@dimen/dimen_25dp"
                    android:layout_height="@dimen/dimen_25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/dimen_12sp"
                    android:background="@drawable/rounded_circle"
                    android:padding="@dimen/dimen_1dp"
                    android:src="@drawable/ic_baseline_cancel" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/crop_disease_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:paddingHorizontal="@dimen/dimen_10dp"
                        android:paddingVertical="@dimen/dimen_2dp"
                        android:text="Root Weevil"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/crop_disease_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="start"
                        android:paddingHorizontal="@dimen/dimen_10dp"
                        android:paddingBottom="@dimen/dimen_5dp"
                        android:text="The presence of root weevil can be detected by the root and leave damage of yield."
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/control"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:paddingHorizontal="@dimen/dimen_10dp"
                        android:paddingVertical="@dimen/dimen_2dp"
                        android:text="@string/control"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/control_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="start"
                        android:paddingHorizontal="@dimen/dimen_10dp"
                        android:paddingBottom="@dimen/dimen_5dp"
                        android:text="If incidence is observed apply Carbaryl (4G)@10 kg either Phorate (10 G)@4 kg or Carbofuran (3 G) @10 kg per acre."
                        android:textSize="14dp" />
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>
</layout>
